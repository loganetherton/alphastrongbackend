{
  "name": "diligencia-backend",
  "version": "0.1.0",
  "description": "Diligencia API",
  "repository": {
    "type": "git",
    "url": "https://github.com/loganetherton/diligenciabackend.git"
  },
  "author": "Logan Etherton",
  "scripts": {
    "start": "NODE_ENV=development npm run watch",
    "build": "NODE_ENV=development npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "NODE_ENV=development SECRET=abcde concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@types/cors": "^2.8.4",
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-mongo": "^2.0.0",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "fbgraph": "^1.4.1",
    "lodash": "^4.17.4",
    "lusca": "^1.5.2",
    "mongoose": "^4.13.7",
    "morgan": "^1.9.0",
    "nodemailer": "^4.4.1",
    "pug": "^2.0.0-rc.4",
    "request": "^2.83.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.34",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.0.35",
    "@types/express-session": "^1.15.6",
    "@types/jest": "^21.1.8",
    "@types/jquery": "^3.2.17",
    "@types/lodash": "^4.14.91",
    "@types/mongodb": "^2.2.17",
    "@types/mongoose": "^4.7.29",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.50",
    "@types/nodemailer": "^1.3.32",
    "@types/passport": "^0.3.3",
    "@types/passport-facebook": "^2.1.3",
    "@types/request": "^2.0.9",
    "@types/shelljs": "^0.7.7",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^21.2.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.13.0",
    "shelljs": "^0.7.7",
    "source-map-support": "^0.5.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.0.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
